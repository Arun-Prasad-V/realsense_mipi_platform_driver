From: Nael Masalha <nael.masalha@intel.com>
Date: Sun, 8 Dec 2019 14:16:48 +0200
Subject: [PATCH] d4xx: use default VC's as defined in FW

 - Depth VC is 0.
 - RGB VC is 1.

Signed-off-by: Nael Masalha <nael.masalha@intel.com>
---
 kernel-dts/t18x-common-modules/tegra186-camera-d4xx.dtsi | 14 +++++++-------
 1 file changed, 7 insertions(+), 7 deletions(-)

diff --git a/kernel-dts/t18x-common-modules/tegra186-camera-d4xx.dtsi b/kernel-dts/t18x-common-modules/tegra186-camera-d4xx.dtsi
index f4a5227..df7567e 100644
--- a/kernel-dts/t18x-common-modules/tegra186-camera-d4xx.dtsi
+++ b/kernel-dts/t18x-common-modules/tegra186-camera-d4xx.dtsi
@@ -40,7 +40,7 @@
 								remote-endpoint = <&csi_in0>;
 								src_depth0: source@0 {
 									data-types = <0x31>;
-									vc-id = <1>;
+									vc-id = <0>;
 								};
 								src_y0: source@1 {
 									data-types = < 0x2a
@@ -48,7 +48,7 @@
 											0x2b
 											0x32
 											0x24>;
-									vc-id = <1>;
+									vc-id = <0>;
 								};
 							};
 						};
@@ -72,7 +72,7 @@
 						embedded_metadata_height = "0";
 						min_framerate = "6";
 						max_framerate = "30";
-						vc_id = "1";
+						vc_id = "0";
 					};
 					mode1 {
 						pixel_t = "grey_y16";
@@ -117,7 +117,7 @@
 							d4m1_out: endpoint {
 								port-index = <1>;
 								bus-width = <2>;
-								vc-id = <0>;
+								vc-id = <1>;
 								remote-endpoint = <&csi_in1>;
 							};
 						};
@@ -142,7 +142,7 @@
 						embedded_metadata_height = "0";
 						min_framerate = "6";
 						max_framerate = "30";
-						vc_id = "0";
+						vc_id = "1";
 					};
 				};
 			};
@@ -350,7 +350,7 @@
 						status = "ok";
 						port-index = <0>;
 						bus-width = <2>;
-						vc-id = <1>;
+						vc-id = <0>;
 						remote-endpoint = <&csi_out0>;
 					};
 				};
@@ -360,7 +360,7 @@
 
 					vi_in1: endpoint {
 						status = "ok";
-						vc-id = <0>;
+						vc-id = <1>;
 						port-index = <0>;
 						bus-width = <2>;
 						remote-endpoint = <&csi_out1>;
