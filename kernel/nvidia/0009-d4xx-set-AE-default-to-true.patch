@@ -1521,7 +1521,7 @@ static const struct v4l2_ctrl_config ds5_ctrl_laser_power = {
 	.min = 0,
 	.max = 1,
 	.step = 1,
-	.def = 0,
+	.def = 1,
 };
 
 static const struct v4l2_ctrl_config ds5_ctrl_manual_laser_power = {
@@ -1771,7 +1771,7 @@ static int ds5_ctrl_init(struct ds5 *state)
 		V4L2_EXPOSURE_MANUAL;
 	ctrls->auto_exp = v4l2_ctrl_new_std_menu(hdl, ops,
 						 V4L2_CID_EXPOSURE_AUTO,
-						 max, 0, V4L2_EXPOSURE_AUTO);
